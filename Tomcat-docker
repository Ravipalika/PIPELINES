pipeline {
    agent any
    stages {
        stage("Get code from git") {
            steps {
                git branch: 'main', credentialsId: 'git', url: 'https://github.com/Ravipalika/basic-webapp.git'
            }
        }
        stage("Build to war") {
            steps {
                sh 'mvn clean package'
            }
        }
        stage("create image") {
            steps {
                sh 'docker build -t imagetom .'
            }
        }
        stage("create container from image") {
            steps {
                sh 'docker run -itd --name tomcont -p 8097:8080 imagetom'
            }
        }
    }
}
